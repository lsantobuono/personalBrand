.col-front-page {
	padding:1em;
}

.col-front-page.show:after {
	content: '';
	display: block;
	width: 0;
	height: 0;
	border: .5em solid #dcf0ff;
	border-bottom-color: transparent;
	border-right-color: transparent;
	border-left-color: transparent;
	position: absolute;
	opacity:1;
	bottom:-10px;
	left:50%;
}

