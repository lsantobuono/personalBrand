@keyframes animation-mid-panel {

	from {
		transform:  translatex(-300%) ;
		opacity: 0;
	}
	20% {
		transform: translatex(0px) ;
		animation-timing-function: ease-in-out;
		opacity:1
	}
	40% {
		transform: translatex(0px) ;
		animation-timing-function: ease-in-out;
		opacity:1;
	}
	50% {
		transform: translatex(300%) ;
		animation-timing-function: ease-in-out;
		opacity: 0;
	}
	51% {
		transform: translatex(-300%) ;
		animation-timing-function: ease-in-out;
		opacity: 0;
	}
}

#panel-moving-1 {
