@keyframes moving-text {
	from {
		transform:  translatex(-300%) translatey(50%);
		opacity: 0;
	}
	25% {
		transform: translatex(0px) translatey(50%);
		animation-timing-function: ease-in-out;
		opacity:1
	}
	75% {
		transform: translatex(0px) translatey(50%);
		animation-timing-function: ease-in-out;
		opacity:1;
	}
	to {
		transform: translatex(300%) translatey(50%);
		animation-timing-function: ease-in-out;
		opacity: 0;
	}
}

