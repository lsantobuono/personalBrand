.video-container {
    width:100%;
    height:400px;
    position:relative;
	overflow: hidden;
}
.video-display {
    position: absolute; 
    top: 0; left:0;
    width: 100%; 
    margin-top:-3em;// Acomoda un poco mejor al video luego del resize
    z-index: -1;
}
video {
	    object-fit: cover;
}

@media only screen and (max-width: 800px) {
    #bgvid {
        display: none;
    }
    .video-content {
    	color:black !important;
    }
}


.video-content {
    top:0; left:0;
    color:white;
}


