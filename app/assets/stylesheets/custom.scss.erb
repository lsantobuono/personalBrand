@import "bootstrap-sprockets";
@import "bootstrap";

/* mixins, variables, etc. */

$dark-grey: #666666;

$light-grey: #cccccc;


.navbar {
	margin-bottom: 0;
		background-color: black;
		font-size: 1.3em;

	.navbar-collapse {
		ul {
			li {
				a {
					padding-left:2em;
					padding-right:2em;
				}
			}
		}
	}
}


body {
	color: white;
	background-color:$light-grey;
}

.content-container {
	margin-left: 1em;
	margin-right: 1em;
}

@media only screen and (min-width: 860px) {
	.content-container 
	{
		margin-left: 15em;
		margin-right: 15em;
	}
}


.background-page {
	padding-top: 5em; //La NAVBAR
    width:100vw;
    height: 100vh; 
    background:green;
    background-image:url('some-image.jpg');
    background-size:cover;
}
.content {
    position:absolute; 
    width:100%; 
    top:100%; 
    height: 100px;
}