@import "bootstrap-sprockets";
@import "bootstrap";
@import 'jquery.fullpage';
/* mixins, variables, etc. */

$dark-grey: #666666;

$light-grey: #f2f2f2;

$panel-grey: #8585ad;

.navbar {
	height:4em;
	margin-bottom: 0;
	background-color: black;
	border-color: black;
	font-size: 0.9em;
	.navbar-collapse {
		ul {
			li {
				&:hover {
					background-color: white;
				}	
				a {
					padding-left:2em;
					padding-right:2em;
				}
			}
		}
	}
}

html,body { //TODO no dejar scrollear horizontal
    max-width: 100%;
    overflow-x: hidden;
}

body {
	color: white;
	background-color:$light-grey;
	font-family: "Whitney SSm A","Whitney SSm B",sans-serif;
}

.content-container {
	text-align: center;
	margin-left: 1em;
	margin-right: 1em;
}



.background-page {
    background-size:cover;
    padding-top:2em;
    padding-bottom: 2em;
}


@media only screen and (min-width: 860px) {
	.content-container 
	{
		margin-left: 15em;
		margin-right: 15em;
	}
}




.arrow-button {
	height:3em;
	cursor: pointer;
	&:hover {
		opacity: 0.5;
	}
}

.left-arrow {
	float:left
}

.right-arrow {
	float:right;
}

.horizontal-arrow {
	position:relative;

	top:30%;
	font-size: 2em;
	padding:1em;
	background-color: $light-grey;
	opacity: 0.5;
	display: inline-block;
	text-align: center;
	cursor:pointer;
	&:hover {
      background-color: $gray-darker;
    }
}


/* home */

.click-me-button
{
	position:relative;
	width:3em;
	left:-20%;
	top:-30%;
}

.preview-text
{
	font-size: 1em;
	color:$dark-grey;
}

.home-title {
	opacity: 0;
}
.home-description {
	opacity:0;
}


h1 {
  font-size: 5em;   
  margin: 0;
  padding: 0;
}

.portfolio-list {
  list-style: none;
  padding: 0;
  display:flex;
  justify-content: center;
  flex-wrap: wrap;
  li {
    padding: 10px 0;
    padding-left:1em;

  }

  .picture {
    width:330px;
    height:250px;
    position:relative;
  }

  a{
     /* unvisited link */
    &:link {
       color: black;
    }
    /* visited link */
    &:visited {
    color: black;
    }
    /* mouse over link */
    &:hover {
      text-decoration: none;
      color: $gray-light;
      cursor:pointer;
      opacity: 0.8;

    }
  }
}

.preview-portfolio {
  position:relative;
  max-width:350px;
  width:100%;
  background-color: black;
  overflow:hidden;
	.content {
    position:absolute;
	bottom:0;
    right:0em;
    left:0em;

    margin:0px;
    padding:1em;

    text-align: center;
    width:100%;

    color: white;
    background-color: #24313d;
    font-size: 0.8em;
    line-height: 1.2em;
    display: none;
    text-align: center;
  }

	.picture {
		transform:scale(1.1);
		width:100%;
	}
	.pic-active {
		opacity:0.5;
  		transform: scale(1);
  		width:100%;
	}
	
}

a:hover .circular-link{
	background-color: orange;
	cursor:pointer;
}

.circular-link {
	text-align: center;
	display:block;
	height:100px;
	width:100px;
	margin: 0 auto 20px auto;
	font-size:5em;
	background-color: white;
	border-radius: 50%;
	color:black;
}

.contact-column {
	 padding:1em; 
}

.boton-negro {
	background-color: black;
	padding-left:2em;
	padding-right: 2em;
	padding-top:1em;
	padding-bottom:1em;
	margin-left: 1em;
	font-size:0.9em;
	cursor:pointer;
}

.boton-negro:hover, .boton-negro:active, .boton-negro:focus {
	background-color: black !important; 
}


.boton-naranja {
	background-color: orange;
	border-color: orange;
	padding-left:2em;
	padding-right: 2em;
	padding-top:1em;
	padding-bottom:1em;
	margin-left: 1em;
	font-size:0.9em;
	cursor:pointer;
}

.boton-naranja:hover, .boton-naranja:active, .boton-naranja:focus {
	background-color: orange !important; 
}


.front-page-row {
	 font-size:0.9em; 
	 margin-top:6em; 
	 padding: 2em 0;
}

.front-page-image {
	width:100%;
	border-radius: 0.5em;
	box-shadow: 1em 1em .5em -.5em rgba(0, 0, 0, 0.3);
    margin-bottom: 1em;
    height:10em;
}
