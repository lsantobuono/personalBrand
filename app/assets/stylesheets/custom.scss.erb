@import "bootstrap-sprockets";
@import "bootstrap";
@import 'jquery.fullpage';
/* mixins, variables, etc. */

$dark-grey: #666666;

$light-grey: #f2f2f2;

$panel-grey: #8585ad;

.navbar {
	margin-bottom: 0;
	background-color: black;
	border-color: black;
	font-size: 1.3em;
	height: 4em;
	.navbar-collapse {
		ul {
			li {
				a {
					padding-left:2em;
					padding-right:2em;
				}
			}
		}
	}
}

html,body { //TODO no dejar scrollear horizontal
    max-width: 100%;
    overflow-x: hidden;
}

body {
	color: white;
	background-color:$light-grey;
	font-family: "Whitney SSm A","Whitney SSm B",sans-serif;
}

.content-container {
	text-align: center;
	margin-left: 1em;
	margin-right: 1em;
}



.background-page {
    height: 100vh; 
    background-size:cover;
}

.between-page-container {
	background-color: $panel-grey;
	bottom: -60%;
	height: 70%;
	width: 95%;
	position:relative;
}
@media only screen and (min-width: 860px) {
	.content-container 
	{
		margin-left: 15em;
		margin-right: 15em;
	}
	.between-page-container
	{
		width:75%;
	}
}




.arrow-button {
	height:3em;
	cursor: pointer;
	&:hover {
		opacity: 0.5;
	}
}

.left-arrow {
	float:left
}

.right-arrow {
	float:right;
}

.horizontal-arrow {
	position:relative;

	top:30%;
	font-size: 2em;
	padding:1em;
	background-color: $light-grey;
	opacity: 0.5;
	display: inline-block;
	text-align: center;
	cursor:pointer;
	&:hover {
      background-color: $gray-darker;
    }
}


/* home */

.click-me-button
{
	position:relative;
	width:3em;
	left:-20%;
	top:-30%;
}

.preview-text
{
	font-size: 1em;
	color:$dark-grey;
}



h1 {
  font-size: 5em;   
  margin: 0;
  padding: 0;
}

.section {
  text-align:center;
}

#section1,
#section2,
#section3,
#section4,
#section5 {
   background-size: cover;
}

#section1 {
  background-image: url(<%= asset_path 'bg1.jpg' %>) ;
}

#section2 {
  background-image: url(<%= asset_path 'bg2.jpg' %>) ;
}

#section3 {
  background-image: url(<%= asset_path 'bg3.jpg' %>) ;
}

#section4 {
  background-image: url(<%= asset_path 'bg4.jpg' %>) ;
}


.portfolio-list {
  list-style: none;
  padding: 0;
  display:flex;
  justify-content: center;
  flex-wrap: wrap;
  li {
    padding: 10px 0;
    padding-left:1em;

  }

  .picture {
    width:330px;
    height:250px;
    position:relative;
  }

  a{
     /* unvisited link */
    &:link {
       color: black;
    }
    /* visited link */
    &:visited {
    color: black;
    }
    /* mouse over link */
    &:hover {
      text-decoration: none;
      color: $gray-light;
      cursor:pointer;
      opacity: 0.8;

    }
  }
}

.preview-portfolio {
  position:relative;
  max-width:350px;
  width:100%;
  background-color: black;
  padding:1em;
	.content {
    position:absolute;
	bottom:0;
    right:0em;
    left:0em;

    margin:0px;
    padding:1em;

    text-align: center;
    width:100%;

    color: white;
    background-color: #24313d;
    font-size: 0.8em;
    line-height: 1.2em;
    display: none;
    text-align: center;
  }

	.picture {
		transform:scale(1.1);
		width:100%;
	}
	.pic-active {
		opacity:0.7;
  		transform: scale(1.05);
  		width:100%;
	}
	
}

a:hover .circular-link{
	background-color: yellow;
	cursor:pointer;
}

.circular-link {
	text-align: center;
	display:block;
	height:100px;
	width:100px;
	margin: 0 auto 20px auto;
	font-size:5em;
	background-color: white;
	border-radius: 50%;
	color:black;
}

.contact-column {

	background-color: $light-grey;
	 padding:1em; 
}

.boton-negro {
	background-color: black;
	padding-left:2em;
	padding-right: 2em;
	padding-top:1em;
	padding-bottom:1em;
	margin-left: 1em;
	font-size:0.9em;
	&:hover {
		background-color: $dark-grey;
	}
}

.front-page-row {
	 font-size:0.9em; 
	 margin-top:6em; 
	 padding: 2em 0;
}

.front-page-image {
	width:100%;
	height:17em; 
	padding-bottom:1em;
}