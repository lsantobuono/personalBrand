@import "bootstrap-sprockets";
@import "bootstrap";
@import 'jquery.fullpage';
/* mixins, variables, etc. */

$dark-grey: #666666;

$light-grey: #cccccc;

$panel-grey: #8585ad;

.navbar {
	margin-bottom: 0;
	background-color: black;
	border-color: black;
	font-size: 1.3em;
	height: 4em;
	.navbar-collapse {
		ul {
			li {
				a {
					padding-left:2em;
