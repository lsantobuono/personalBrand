@import "bootstrap-sprockets";
@import "bootstrap";
@import 'jquery.fullpage';
/* mixins, variables, etc. */

$dark-grey: #666666;

$light-grey: #f2f2f2;

$panel-grey: #8585ad;

$main-blue: #0099ff;

.navbar {
	margin-bottom: 0;
	background: rgba(255, 255, 255,0.9);
	border-color: transparent;
	font-size: 1em;
  border-bottom: 1px solid gray;
	.navbar-collapse {
		ul {
			li {
				&:hover {
					background-color: white;
					color:$main-blue;
				}	
				a {
					 &:link {
						color:$main-blue;
				    }
				    /* visited link */
				    &:visited {
						color:$main-blue;
				    }
				    /* mouse over link */
				    &:hover {
						color:$main-blue;
				    }

					padding-left:2em !important;
					padding-right:2em !important;
					color:$main-blue;
				}
			}
		}
	}
}

html,body { 
    max-width: 100%;
    overflow-x: hidden;
}

body {
	color: black;
	background-color:white;
	font-family: "Whitney SSm A","Whitney SSm B",sans-serif;
}

.content-container {
	text-align: center;
	margin-left: 1em;
	margin-right: 1em;
}


@media only screen and (min-width: 860px) {
	.content-container 
	{
		margin-left: 15em;
		margin-right: 15em;
	}
}

section {
  padding-top: 2em;
  padding-bottom: 2em;
}

#welcome {
  height:100vh;
  background: url(<%= asset_path 'background-home.jpg' %>) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  background-color: white;
  color: $main-blue;

}

#about {
  margin-top:2em; //Sin esto la navbar bardea
  background-color: white;
}

#tools {
  color: white;
  background-color: $main-blue;
  margin:0 -100%; /* old browsers fallback */
  margin:0 calc(50% - 50vw);

}

//wat do

.nav-tabs {
  margin-top: 1em;
  li {
    float:none;
    display:inline-block;
    *display:inline; /* ie7 fix */
    zoom:1; /* hasLayout ie7 trigger */
    a {
      color:$main-blue;

    }
  }
}

.tab-pane {
  padding-top:1em;
}

.arrow-button {
	height:3em;
	cursor: pointer;
	&:hover {
		opacity: 0.5;
	}
}

.left-arrow {
	float:left
}

.right-arrow {
	float:right;
}

.horizontal-arrow {
	position:relative;

	top:30%;
	font-size: 2em;
	padding:1em;
	background-color: $light-grey;
	opacity: 0.5;
	display: inline-block;
	text-align: center;
	cursor:pointer;
	&:hover {
      background-color: $gray-darker;
    }
}


/* home */

.click-me-button
{
	position:relative;
	width:3em;
	left:-20%;
	top:-30%;
}

.preview-text
{
	font-size: 1em;
	color:$dark-grey;
}


h1 {
  font-size: 5em;   
  margin: 0;
  padding: 0;
}

.portfolio-list {
  list-style: none;
  padding: 0;
  display:flex;
  justify-content: center;
  flex-wrap: wrap;
  li {
    padding: 10px 0;
    padding-left:1em;

  }

  .picture {
    width:330px;
    height:250px;
    position:relative;
  }

  a{
     /* unvisited link */
    &:link {
       color: black;
    }
    /* visited link */
    &:visited {
    color: black;
    }
    /* mouse over link */
    &:hover {
      text-decoration: none;
      color: $gray-light;
      cursor:pointer;
      opacity: 0.8;

    }
  }
}

.preview-portfolio {
  position:relative;
  max-width:300px;
  width:100%;
  background-color: black;
  overflow:hidden;
	.content {
    position:absolute;
	bottom:0;
    right:0em;
    left:0em;

    margin:0px;
    padding:1em;

    text-align: center;
    width:100%;

    color: white;
    background-color: #24313d;
    font-size: 0.8em;
    line-height: 1.2em;
    display: none;
    text-align: center;
  }

	.picture {
		transform:scale(1.1);
		width:100%;
	}
	.pic-active {
		opacity:0.5;
  		transform: scale(1);
  		width:100%;
	}
	
}

a:hover .circular-link{
	background-color: orange;
	cursor:pointer;
}

.circular-link {
	text-align: center;
	display:block;
	height:100px;
	width:100px;
	margin: 0 auto 20px auto;
	font-size:5em;
	background-color: white;
	border-radius: 50%;
	color:black;
}


