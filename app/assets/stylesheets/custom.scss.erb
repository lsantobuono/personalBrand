@import "bootstrap-sprockets";
@import "bootstrap";

/* mixins, variables, etc. */

$dark-grey: #666666;

$light-grey: #cccccc;

$panel-grey: #8585ad;

.navbar {
	margin-bottom: 0;
		background-color: black;
		font-size: 1.3em;

	.navbar-collapse {
		ul {
			li {
				a {
					padding-left:2em;
					padding-right:2em;
				}
			}
		}
	}
}


body {
	color: white;
	background-color:$light-grey;
}

.content-container {
	margin-left: 1em;
	margin-right: 1em;
}



.background-page {
	padding-top: 5em; //La NAVBAR
    height: 100vh; 
    background:green;
    background-size:cover;
}

.between-page-container {
	background-color: $panel-grey;
	bottom: -60%;
	height: 70%;
	width: 95%;
	position:relative;
}

@media only screen and (min-width: 860px) {
	.content-container 
	{
		margin-left: 15em;
		margin-right: 15em;
	}
	.between-page-container
	{
		width:75%;
	}
}

.moving-text {
	font-size: 3em;
	top:-1em;
	bottom:1em;
	position:absolute;
	left:50%;

}

@keyframes moving-text {
	from {
		transform: translatey(0%) ;
		animation-timing-function: ease-in-out;
	}
	15% {
		transform: translatey(50%) ;
		animation-timing-function: ease-in-out;
	}
	85% {
		transform: translatey(50%) ;
		animation-timing-function: ease-in-out;
	}
	to {
		transform: translatey(100%) ;
		animation-timing-function: ease-in-out;
	}
}

#moving-1 {
	animation-name: moving-text;
	animation-duration: 5s;
	animation-iteration-count: 1;
	animation-timing-function: linear;
	-webkit-animation-fill-mode: forwards;
}

#moving-2 {
	animation-name: moving-text;
	animation-duration: 5s;
	animation-iteration-count: 1;
	animation-delay: 4s;
	animation-timing-function: linear;
	-webkit-animation-fill-mode: forwards;
}

#moving-3 {
	animation-name: moving-text;
	animation-duration: 5s;
	animation-iteration-count: 1;
	animation-delay: 8s;
	animation-timing-function: linear;
	-webkit-animation-fill-mode: forwards;
}

#moving-4 {
	animation-name: moving-text;
	animation-duration: 5s;
	animation-iteration-count: 1;
	animation-delay: 12s;
	animation-timing-function: linear;
	-webkit-animation-fill-mode: forwards;
}
