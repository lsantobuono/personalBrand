.navbar {
	margin-bottom: 0;
	background: rgba(255, 255, 255,0.9);
	border-color: transparent;
	font-size: 20px;
      vertical-align: middle;
	.navbar-collapse {
		ul {
			li {
				&:hover {
					background-color: transparent;
					color:$main-blue;
				}	
				a {
					 &:link {
						color:$main-blue;
				    }
				    /* visited link */
				    &:visited {
						color:$main-blue;
				    }
				    /* mouse over link */
				    &:hover {
						color:$main-blue;
            border-bottom: 2px solid $main-blue;
				    }

					padding-left:2em !important;
					padding-right:2em !important;
					color:$main-blue;
				}
			}
		}
	}
}

