body {
	color: white;
	background-color:$light-grey;
}

.content-container {
	margin-left: 1em;
	margin-right: 1em;
}



.background-page {
	padding-top: 6em; //La NAVBAR
    height: 100vh; 
    background:green;
    background-size:cover;
}

.between-page-container {
	background-color: $panel-grey;
	bottom: -60%;
	height: 70%;
	width: 95%;
	position:relative;
}

@media only screen and (min-width: 860px) {
	.content-container 
	{
		margin-left: 15em;
		margin-right: 15em;
	}
	.between-page-container
	{
		width:75%;
	}
}

.moving-text {
	font-size: 3em;
	top:-1em;
	bottom:1em;
	position:absolute;
	left:50%;

}

@keyframes moving-text {
	from {
		transform: translatey(0%) ;
		animation-timing-function: ease-in-out;
	}
	10% {
		transform: translatey(50%) ;
		animation-timing-function: ease-in-out;
	}
	20% {
		transform: translatey(50%) ;
		animation-timing-function: ease-in-out;
	}
	30% {
		transform: translatey(100%) ;
		animation-timing-function: ease-in-out;
		opacity:1;
	}
	31% {
		transform: translatey(100%) ;
		animation-timing-function: ease-in-out;
		opacity:0;
	}
	32% {
		transform:  translatex(-300%) translatey(50%);
		opacity: 0;
	}
	69% {
		transform:  translatex(-300%) translatey(50%);
		opacity: 0;
	}
	70% {
		transform: translatex(-300%) translatey(50%);
		animation-timing-function: ease-in-out;
		opacity:1;
	}
	80% {
		transform: translatex(0px) translatey(50%);
		animation-timing-function: ease-in-out;
	}
	90% {
		transform: translatex(0px) translatey(50%);
		animation-timing-function: ease-in-out;
	}
	to {
		transform: translatex(300%) translatey(50%);
		animation-timing-function: ease-in-out;
	}
}

#moving-1 {
	animation-name: moving-text;
	animation-duration: 17s;
	animation-iteration-count: 1;
	animation-timing-function: linear;
	-webkit-animation-fill-mode: forwards;
}

#moving-2 {
	animation-name: moving-text;
	animation-duration: 17s;
	animation-iteration-count: 1;
	animation-delay: 3s;
	animation-timing-function: linear;
	-webkit-animation-fill-mode: forwards;
}

#moving-3 {
	animation-name: moving-text;
	animation-duration: 17s;
	animation-iteration-count: 1;
	animation-delay: 6s;
	animation-timing-function: linear;
	-webkit-animation-fill-mode: forwards;
}

#moving-4 {
	animation-name: moving-text;
	animation-duration: 17s;
	animation-iteration-count: 1;
	animation-delay: 9s;
	animation-timing-function: linear;
	-webkit-animation-fill-mode: forwards;
}


